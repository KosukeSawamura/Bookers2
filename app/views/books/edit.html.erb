<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model:@book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title, autofocus: true,id: "book_title", class:"form-controll book_title" %><br>
      </div>
      <div class="form-group">
        <label for="opinion">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id: "opinion", class:"form-control opinion" %>
      </div>
      <%= f.submit "Update Book", class:"btn btn-success" %>
      <% end %>

      <p>
      <%= link_to "Show", book_path %> |
      <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>