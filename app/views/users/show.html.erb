<div class="container">
  <div class="row">
   <%= render 'books/new_book', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
          <tr>
            <td></td>
            <td><%= book.book_title %></td>
            <td><%= book.opinion %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>